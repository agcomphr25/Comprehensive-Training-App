{
  "name": "fullstack-monorepo",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm:dev:server\" \"npm:dev:client\"",
    "dev:server": "NODE_ENV=development tsx watch server/src/app.ts",
    "dev:client": "cd client && vite --host 0.0.0.0",
    "build": "cd client && vite build",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "tsx server/src/db/migrate.ts",
    "db:push": "drizzle-kit push",
    "db:seed": "tsx server/src/db/seed.ts"
  },
  "dependencies": {
    "@neondatabase/serverless": "^0.9.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.30.10",
    "express": "^4.22.1",
    "pg": "^8.16.3",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.25",
    "@types/node": "^20.19.27",
    "@types/react": "^18.2.48",
    "@types/react-dom": "^18.2.18",
    "@vitejs/plugin-react": "^4.7.0",
    "concurrently": "^8.2.2",
    "drizzle-kit": "^0.21.4",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vite": "^5.4.21"
  },
  "main": "index.js",
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": ""
}
